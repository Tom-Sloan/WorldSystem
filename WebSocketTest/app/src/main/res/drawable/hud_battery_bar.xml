<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Battery outline -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <size android:width="100dp" android:height="20dp"/>
            <stroke android:width="1dp" android:color="@color/hud_primary_cyan"/>
            <solid android:color="#1A000000"/>
        </shape>
    </item>
    
    <!-- Battery fill (will be programmatically colored) -->
    <item android:id="@+id/battery_fill"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <clip android:clipOrientation="horizontal">
            <shape android:shape="rectangle">
                <corners android:radius="1dp"/>
                <solid android:color="@color/hud_battery_high"/>
            </shape>
        </clip>
    </item>
</layer-list>